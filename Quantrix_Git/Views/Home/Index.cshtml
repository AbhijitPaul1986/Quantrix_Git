<script type="text/javascript">
    $(document).ready(function () {
        $("#liHome").addClass('active');
        var model = @Html.Raw(Json.Encode(Model));
        var address = "";
        var email = "";
        var phone = "";
        if (model._contact != null) {
            address = model._contact.address;
            email = model._contact.email;
            phone = model._contact.phone;
        }
        $(".quantrix_info").show();
        $("#spnAddress").text(address);
        $("#spnemail").text(email);
        $("#spnPhone").text(phone);
        $('.owl-carousel').owlCarousel({
            loop: true,
            items: 1,
            nav: true,
            navText: ["<span class='icon-back'></span>","<span class='icon-next'></span>"],
            responsive: {
              0: {
              items: 1
              },
              600: {
              items: 1
              },
              1000: {
              items: 1
              }
            }
          })
    });
</script>